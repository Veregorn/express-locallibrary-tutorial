<div class="content">
    <h2><%= title %>: <%= author.name %></h2>
    <p><%= author.lifespan %></p>

    <% if (author_books.length > 0) { %>
        <p><strong>Delete the following books before attempting to delete this author.</strong></p>
        <div class="books">
            <h3>Books</h3>
            <ul>
                <% author_books.forEach(function(book) { %>
                    <li>
                        <a href="<%= book.url %>"><%= book.title %></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% } else { %>
        <p><strong>Do you really want to delete this author?</strong></p>
        <form method="post">
            <div class="form-group">
                <input id="authorid" class="form-control" type="hidden" name="authorid" value="<%= author._id %>">
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    <% } %>
</div>