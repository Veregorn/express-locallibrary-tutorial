<div class="content">
    <h2><%= title %>: <%= genre.name %></h2>

    <% if (genre_books.length > 0) { %>
        <p><strong>Delete the following books before attempting to delete this genre.</strong></p>
        <div class="books">
            <h3>Books</h3>
            <ul>
                <% genre_books.forEach(function(book) { %>
                    <li>
                        <a href="<%= book.url %>"><%= book.title %></a>
                    </li>
                <% }) %>
            </ul>
        </div>
    <% } else { %>
        <p><strong>Do you really want to delete this genre?</strong></p>
        <form method="post">
            <div class="form-group">
                <input id="genreid" class="form-control" type="hidden" name="genreid" value="<%= genre._id %>">
            </div>
            <button type="submit" class="btn btn-primary">Delete</button>
        </form>
    <% } %>
</div>