<div class="content">
    <h2><%= title %></h2>
    <% if (author_list.length > 0) { %>
        <ul class="authors">
            <% author_list.forEach(function(author) { %>
                <li>
                    <a href="<%= author.url %>"><%= author.name %></a>
                    <% if (author.date_of_birth) { %>
                        <span> : <%= author.date_of_birth_formatted %> - </span>
                    <% } %>
                    <% if (author.date_of_death) { %>
                        <span><%= author.date_of_death_formatted %></span>
                    <% } %>
                </li>
            <% }); %>
        </ul>
    <% } else { %>
        <p>There are no authors.</p>
    <% } %>
</div>